{
  "name": "Starterkit",
  "version": "1.1.0",
  "description": "WordPress Starterkit",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "lint-staged",
    "phpcs": "./vendor/bin/phpcs --standard=./PHPCodeStandards.xml",
    "phpcbf": "sh ./phpcbf.sh"
  },
  "lint-staged": {
    "linters": {
      "wp-content/themes/leasetheweb/src/js/**/*.js": [
        "eslint --fix",
        "git add"
      ],
      "gulpfile.babel.js": [
        "eslint --fix",
        "git add"
      ],
      "wp-content/themes/leasetheweb/src/scss/**/*.scss": [
        "stylefmt",
        "stylelint",
        "git add"
      ],
      "wp-content/themes/leasetheweb/**/*.php": [
        "phpcbf",
        "phpcs",
        "git add"
      ]
    },
    "gitDir": "../../.."
  },
  "author": "Lease The Web",
  "license": "ISC",
  "browserify-shim": {
    "jquery": "global:jQuery"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "parser": "babel-eslint",
    "rules": {
      "indent": [
        "error",
        2
      ]
    }
  },
  "engines": {
    "node": ">=0.12"
  },
  "private": true,
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.24.1",
    "babelify": "^7.3.0",
    "backstopjs": "^0.8.0",
    "browser-sync": "^2.8.0",
    "browserify": "^11.0.0",
    "browserify-shim": "^3.8.10",
    "del": "^1.2.0",
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-babel": "^6.1.2",
    "gulp-cache": "^0.2.10",
    "gulp-chug": "^0.4.2",
    "gulp-clean-css": "^3.4.0",
    "gulp-concat": "^2.6.0",
    "gulp-eslint": "^3.0.1",
    "gulp-imagemin": "^2.3.0",
    "gulp-jshint": "^1.11.2",
    "gulp-load-plugins": "^1.5.0",
    "gulp-notify": "^2.2.0",
    "gulp-phpcbf": "^0.1.2",
    "gulp-phpcs": "^1.4.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.1.0",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-stylelint": "^3.9.0",
    "gulp-svg-sprite": "^1.3.6",
    "gulp-uglify": "^1.2.0",
    "gulp-util": "^3.0.6",
    "husky": "^0.13.4",
    "lint-staged": "^3.5.1",
    "sc5-styleguide": "^0.3.28",
    "stylefmt": "^6.0.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.4.3",
    "vinyl-source-stream": "^1.1.0"
  },
  "dependencies": {
    "foundation-sites": "~6.3.1"
  }
}
