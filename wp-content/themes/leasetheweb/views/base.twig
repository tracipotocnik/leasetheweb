{% block html_head_container %}
  {% include 'html-header.twig' %}
    {% block head %}{% endblock %}
  </head>
{% endblock %}

<body class="{{body_class}}" data-template="base.twig">
  {% include 'icon-sprite.twig' %}
  <div class="off-canvas-wrapper">
    <div class="off-canvas-wrapper-inner" data-off-canvas-wrapper>

      {% block nav %}
        {% include 'nav.twig' %}
      {% endblock %}

      <div class="off-canvas-content" data-off-canvas-content>
        {% block header %}
          <div class="title-bar hide-for-large">
            <h1 class="title-bar-title">
              <a href="{{ site.url }}">
                <img src="{{ TimberImage(options.header_logo).src }}" alt="{{ site.name }}">
              </a>
            </h1>
            <div class="hamburger" role="button" data-toggle="primaryNav">
              <a href="#">Toggle Right Menu</a>
            </div>
          </div> <!-- /.title-bar -->
        {% endblock %}

        {% block content %}
          <main class="page-content row">
            <section class="small-12 columns">
              <p>Sorry, no entries match your criteria</p>
            </section> <!-- /.post-list.small-12.columns -->
          </main> <!-- /.page-content.row -->
        {% endblock %}

        {% block footer %}
          <footer class="footer" role="contentinfo">
            {% include 'footer.twig' %}
          </footer> <!-- /.site-footer -->
          <a class="exit-off-canvas"></a>
        {% endblock %}

        {{cta}}
      </div> <!-- /.off-canvas-content -->
    </div> <!-- /.off-canvas-wrapper-inner -->
  </div> <!-- /.off-canvas-wrapper -->
  {{ function('wp_footer') }}
</body>
